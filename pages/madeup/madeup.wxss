page{
  margin-bottom: 107rpx;
}
.input-file:hover {
  background: #ccc;
}

image{
  float: right;
  width: 40px;
  height: 80px;
}

.input-file {
  width: 750rpx;
  height: 800rpx;
  display: flex;
  position: relative;
  border: 1rpx solid rgb(189, 185, 185);
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 35rpx;
  background-image: url("http://img0.imgtn.bdimg.com/it/u=288061144,3134878178&fm=26&gp=0.jpg");
  background-size: 30% 30%;
  background-repeat: no-repeat;
  background-position-y: center;
  background-position-x: center;
}

.input-file input {
  opacity: 0;
  filter: alpha(opacity=0);
  font-size: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.input-file>image {
  width: 750rpx;
  height: 800rpx;
}

.form {
  width: 750rpx;
  position: fixed;
  bottom: 0rpx;
  font-size: 20rpx;
  border-top: 1rpx solid black;
  padding: 2rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  text-align: center;
  color: #707070;
}

.form image {
  width: 70rpx;
  height: 70rpx;
}

.increased {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  color: #707070;
  font-size: 27rpx;
  text-align: center;
  width: 750rpx;
}

.increased image {
  width: 80rpx;
  height: 65rpx;
}

@keyframes slidedown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

.slidedown {
  animation: slidedown 0.5s linear;
}

.slideup {
  animation: slideup 0.5s linear;
}

@keyframes slideup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}