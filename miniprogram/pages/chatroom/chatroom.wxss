/* pages/chatroom/chatroom.wxss */
page{
  background-color: #D3D3D3;
  margin-bottom: 75rpx;
}
.jud{
  display: flex;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: relative;
  margin: 30rpx 0 0 20rpx;
}
.myAvatar{
  margin: 30rpx 0 0 10rpx;
}
.msg {
  width: 500rpx;
  background-color: white;
  margin: 30rpx 0 0 20rpx;
  padding: 20rpx;
  font-size: 30rpx;
  position: relative;
}
.myMsg{
  background-color: #00BFFF;
  color: white;
  margin: 30rpx 20rpx 0 50rpx;
}
.rect{
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  position: absolute;
  transform: rotate(45deg);
  left: -10rpx;
}
.myRect{
  left: 530rpx;
  background-color: #00BFFF;
}
.inputBlock{
  width: 750rpx;
  height: 75rpx;
  background-color: #C0C0C0;
  position: fixed;
  bottom: 0;
  display: flex;
  line-height: 50rpx;
  justify-content: center;
}
.inputBlock .inputBox{
  width: 550rpx;
  height: 60rpx;
  margin-left: 10rpx;
  background-color: white;
  align-self: center;
}
.inputBlock .sendBT{
  width: 80rpx;
  height: 60rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  margin: 0 0 0 10rpx;
  padding: 0 10rpx;
  align-self: center;
}